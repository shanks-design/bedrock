# CRITICAL: Force npm usage by excluding package manager files only
pnpm-lock.yaml
pnpm-lock.yaml.*
.pnpm-store/
.pnpm-debug.log*
yarn.lock
yarn-error.log
.pnp.*
.npmrc
.yarnrc*
.yarn/
package-lock.json

# Exclude development files
.env.local
.env.development
.env.test

# Exclude build artifacts (but not source files)
.next/
out/
dist/
build/

# Exclude logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Exclude cache
.cache/
.parcel-cache/

# Exclude IDE files
.vscode/
.idea/
*.swp
*.swo

# Exclude OS files
.DS_Store
Thumbs.db

# Exclude git (but keep source code)
.git/
.gitignore

# DO NOT exclude node_modules - let Vercel handle this
# DO NOT exclude source files - we need them for the build
